{
  // エディタの基本設定
  "editor.fontFamily": "Fira Code, Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.fontLigatures": true,
  "editor.formatOnPaste": true,
  "editor.formatOnType": true,
  "editor.guides.bracketPairs": true,
  "editor.suggestSelection": "first",
  "editor.wordWrap": "off",
  "editor.inlineSuggest.enabled": true,
  "editor.inlineSuggest.suppressSuggestions": true,
  "editor.linkedEditing": true,
  "editor.cursorStyle": "block-outline",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.startupEditor": "newUntitledFile",
  "workbench.editor.tabSizing": "shrink",
  "workbench.commandCenter": false,

  // エクスプローラーの設定
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "explorer.compactFolders": false,

  // ターミナルの設定
  "terminal.integrated.fontSize": 12,
  "terminal.integrated.tabs.enabled": true,
  "terminal.integrated.defaultLocation": "editor",
  "terminal.external.osxExec": "iTerm.app",

  // 検索の設定
  "search.showLineNumbers": true,

  // Git関連の設定
  "git.autofetch": true,
  "git.openRepositoryInParentFolders": "always",

  // GitHub Copilotの設定
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "markdown": false,
    "scminput": false,
    "yaml": false,
    "dart": false,
    "go": false
  },
  "github.copilot.editor.enableAutoCompletions": true,

  // 言語別設定
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[vue]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode",
    "editor.codeActionsOnSave": [
      "source.organizeImports",
      "source.fixAll.eslint"
    ]
  },
  "[svelte]": {
    "editor.defaultFormatter": "svelte.svelte-vscode"
  },
  "[rust]": {
    "editor.formatOnSave": true
  },
  "[python]": {
    "editor.formatOnType": true
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[dart]": {
    "editor.defaultFormatter": "Dart-Code.dart-code",
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.rulers": [80],
    "editor.selectionHighlight": false,
    "editor.suggest.snippetsPreventQuickSuggestions": false,
    "editor.suggestSelection": "first",
    "editor.tabCompletion": "onlySnippets",
    "editor.wordBasedSuggestions": "off"
  },
  "[csharp]": {
    "editor.formatOnSave": true,
    "editor.formatOnType": true
  },

  // 言語サーバー設定
  "go.formatTool": "goimports",
  "go.toolsManagement.autoUpdate": true,
  "go.useLanguageServer": true,
  "rust-analyzer.checkOnSave": true,
  "rust-analyzer.check.command": "clippy",
  // .NET/C#の言語サーバー設定
  "dotnetAcquisitionExtension.existingDotnetPath": [
    "/Users/esh2n/.local/share/mise/installs/dotnet/8.0.408/dotnet"
  ],
  "dotnet.server.useOmnisharp": false,
  "csharp.semanticHighlighting.enabled": true,
  "csharp.suppressDotnetRestoreNotification": false,
  "csharp.suppressDotnetInstallWarning": false,
  "csharp.suppressProjectJsonWarning": false,
  "csharp.suppressBuildAssetsNotification": false,
  "csharp.maxProjectFileCountForDiagnosticAnalysis": 1000,
  "dotnet.backgroundAnalysis.analyzerDiagnosticsScope": "openFiles",
  "dotnet.backgroundAnalysis.compilerDiagnosticsScope": "openFiles",
  "dotnet.completion.showCompletionItemsFromUnimportedNamespaces": true,
  "omnisharp.dotNetPath": "/Users/esh2n/.local/share/mise/installs/dotnet/8.0.408/dotnet",
  "ms-dotnettools.csharp.dotnetPath": "/Users/esh2n/.local/share/mise/installs/dotnet/8.0.408/dotnet",

  // ESLint設定
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "vue",
    "react",
    "html",
    "typescript",
    "typescriptreact"
  ],

  // Better Comments設定
  "better-comments.multilineComments": true,
  "better-comments.highlightPlainText": false,
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "backgroundColor": "transparent"
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "backgroundColor": "transparent"
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "backgroundColor": "transparent"
    }
  ],

  // その他の設定
  "files.exclude": {
    "**/.classpath": true,
    "**/.project": true,
    "**/.settings": true,
    "**/.factorypath": true
  },
  "roo-cline.allowedCommands": [
    "npm test",
    "npm install",
    "tsc",
    "git log",
    "git diff",
    "git show",
    "npx",
    "git",
    "cd",
    "mkdir",
    "cat",
    "gh"
  ],
  "terminal.integrated.env.osx": {
    "Q_NEW_SESSION": "1",
    "AQUA_GLOBAL_CONFIG": "${workspaceFolder}/aqua.yaml",
    "PATH": "${workspaceFolder}/.aqua/bin:${env:PATH}"
  },
  "terminal.integrated.defaultProfile.osx": "zsh",
  "editor.accessibilitySupport": "on",
  "editor.minimap.enabled": true,
  "update.releaseTrack": "prerelease",
  "window.commandCenter": 1,
  "cursor.cpp.disabledLanguages": [
    "plaintext",
    "markdown",
    "scminput",
    "yaml",
    "dart"
  ],
  "accessibility.signalOptions.volume": 1,
  "githubPullRequests.pullBranch": "never",
  "editor.formatOnSave": true,
  "files.trimTrailingWhitespaceInRegexAndStrings": false,
  "workbench.colorTheme": "Catppuccin Mocha",
