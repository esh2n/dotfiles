# Key bindings - Tabs and Windows
keybind = cmd+t=new_tab
keybind = cmd+shift+t=new_window
keybind = cmd+w=close_tab
keybind = cmd+shift+w=close_window
keybind = cmd+1=goto_tab:1
keybind = cmd+2=goto_tab:2
keybind = cmd+3=goto_tab:3
keybind = cmd+4=goto_tab:4
keybind = cmd+5=goto_tab:5
keybind = cmd+6=goto_tab:6
keybind = cmd+7=goto_tab:7
keybind = cmd+8=goto_tab:8
keybind = cmd+9=goto_tab:9
keybind = cmd+tab=next_tab
keybind = cmd+shift+tab=previous_tab

# Splits
keybind = cmd+d=new_split:right
keybind = cmd+shift+d=new_split:down
keybind = cmd+shift+left=goto_split:left
keybind = cmd+shift+right=goto_split:right
keybind = cmd+shift+up=goto_split:top
keybind = cmd+shift+down=goto_split:bottom
keybind = cmd+alt+left=resize_split:left,10
keybind = cmd+alt+right=resize_split:right,10
keybind = cmd+alt+up=resize_split:up,10
keybind = cmd+alt+down=resize_split:down,10
keybind = cmd+shift+enter=toggle_split_zoom

# Navigation
keybind = cmd+left=previous_tab
keybind = cmd+right=next_tab
keybind = cmd+up=scroll_page_up
keybind = cmd+down=scroll_page_down
keybind = cmd+home=scroll_to_top
keybind = cmd+end=scroll_to_bottom
keybind = shift+page_up=scroll_page_up
keybind = shift+page_down=scroll_page_down

# Prompt-based scrolling
keybind = ctrl+shift+up=scroll_to_prompt:-1
keybind = ctrl+shift+down=scroll_to_prompt:1

# Copy/Paste and Selection
keybind = cmd+c=copy_to_clipboard
keybind = cmd+v=paste_from_clipboard
keybind = cmd+shift+v=paste_from_selection

# Font size
keybind = cmd+plus=increase_font_size:1
keybind = cmd+equal=increase_font_size:1
keybind = cmd+minus=decrease_font_size:1
keybind = cmd+0=reset_font_size

# Terminal control
keybind = cmd+k=clear_screen
keybind = cmd+enter=toggle_fullscreen

# Quick terminal
keybind = cmd+shift+space=toggle_quick_terminal

# Reload config
keybind = cmd+shift+comma=reload_config
