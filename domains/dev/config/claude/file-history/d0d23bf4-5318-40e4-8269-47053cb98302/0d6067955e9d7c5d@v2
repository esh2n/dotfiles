# 外部設定ファイルのインクルード
[include]
    path = ~/.config/git/config.local
[includeIf "gitdir:/Users/shunya.endo/go/github.com/sansaninc/"]
    path = ~/.config/git/config.sansaninc

# 会社/プロジェクト別の設定例（必要に応じてコメント解除して使用）
# [includeIf "gitdir:/Users/shunya.endo/path/to/work/repos/"]
#     path = ~/.config/git/config.work


# 明らかにGitを改善する設定
[column]
    # リスト表示（branch、status、tagなど）を列形式に整形
    ui = auto
[branch]
    # ブランチを最新のコミット日時順に表示（最新が上）
    sort = -committerdate
[tag]
    # タグをバージョン番号順に表示（0.5.101が0.5.1000の前に来るように）
    sort = version:refname
[init]
    # 新規リポジトリ作成時のデフォルトブランチ名
    defaultBranch = main
[diff]
    # より高度な差分アルゴリズムを使用（コードの移動をより賢く検出）
    algorithm = histogram
    # 移動したコードを色分けして表示
    colorMoved = plain
    # diff出力のプレフィックスをa/bではなくi/w/c（index/working/commit）に
    mnemonicPrefix = true
    # ファイル名の変更を検出
    renames = true
    # 空白の変更を無視
    ignoreSpaceChange = true
[push]
    # 現在のブランチと同名のリモートブランチにpush
    default = simple
    # リモートブランチが存在しない場合に自動設定（--set-upstreamが不要に）
    autoSetupRemote = true
    # pushする際にタグも一緒に送信
    followTags = true
[fetch]
    # リモートで削除されたブランチをローカルでも削除
    prune = true
    # リモートで削除されたタグをローカルでも削除
    pruneTags = true
    # すべてのリモートからfetch
    all = true

# 便利な追加設定
[help]
    # コマンドミスを検出して修正を提案
    autocorrect = prompt
[commit]
    # コミットメッセージ編集時に変更内容を表示
    verbose = true
    template = ~/.config/git/message
[rerere]
    # Reuse Recorded Resolution: 同じコンフリクト解決を再利用
    enabled = true
    # 解決したコンフリクトを自動的に適用
    autoupdate = true
[rebase]
    # fixupコミットを自動的にsquash
    autoSquash = true
    # rebase前に自動的に変更をstash
    autoStash = true
    # rebase時に参照を更新
    updateRefs = true

[core]
    # グローバルな.gitignoreファイルの場所
    excludesfile = ~/.config/git/ignore
    # デフォルトエディタ
    editor = nvim
    # 改行コードの扱い
    whitespace = cr-at-eol
    # diffやlogの表示に使用するツール
    pager = delta

# GitHub認証情報の管理（includeIfで設定を上書きするため、グローバルでは無効化）
# [credential "https://github.com"]
#     helper =
#     helper = !/opt/homebrew/bin/gh auth git-credential
# [credential "https://gist.github.com"]
#     helper =
#     helper = !/opt/homebrew/bin/gh auth git-credential

# deltaの設定（高機能なdiff表示ツール）
[delta]
    # キーボードでdiff間を移動可能に
    navigate = true
    # ダークモード
    light = false
    # 変更を横に並べて表示
    side-by-side = true
    # 行番号を表示
    line-numbers = true

[merge]
    # コンフリクト表示をより詳細に（ベースの状態も表示）
    conflictstyle = zdiff3

[interactive]
    # インタラクティブな操作でdeltaを使用
    diffFilter = delta --color-only

# オプションの設定（必要に応じてコメント解除）
[core]
    # ファイルシステム監視を有効化（大規模リポジトリでのgit statusを高速化）
    fsmonitor = true
    # 未追跡ファイルのキャッシュを有効化（大規模リポジトリでのパフォーマンス向上）
    untrackedCache = true
[pull]
    # pullでrebaseを使用（マージコミットを作らない）
    rebase = true
