import { DataQualityManagementSection } from "./_components/DataQualityManagementSection";
import { fetchStatisticsForHome } from "./fetcher";
import { SummaryCardList } from "./_components/SummaryCardList";
import styles from "./page.module.css";

export default async function Home() {
  const { summaryStatistics, dataQualityStatistics } =
    await fetchStatisticsForHome();

  return (
    <main className={styles.main}>
      <div className={styles.content}>
        <SummaryCardList summaryStatistics={summaryStatistics} />
        <DataQualityManagementSection
          dataQualityStatistics={dataQualityStatistics}
        />
      </div>
    </main>
  );
}
