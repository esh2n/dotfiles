# AeroSpace Configuration

# Start AeroSpace at login
start-at-login = true

# Start borders
after-startup-command = ['exec-and-forget borders']

[gaps]
inner.horizontal = 12
inner.vertical = 8
outer.left = 12
outer.bottom = 8
outer.top = 52
outer.right = 12

[mode.main.binding]
# Basic window management (with monitor boundary crossing)
alt-h = 'focus --boundaries all-monitors-outer-frame left'
alt-j = 'focus --boundaries all-monitors-outer-frame down'
alt-k = 'focus --boundaries all-monitors-outer-frame up'
alt-l = 'focus --boundaries all-monitors-outer-frame right'

# Window movement
alt-shift-h = 'move left'
alt-shift-j = 'move down'
alt-shift-k = 'move up'
alt-shift-l = 'move right'

# Layout management
alt-slash = 'layout tiles horizontal vertical'
alt-comma = 'layout accordion horizontal vertical'

# Window resizing
alt-shift-minus = 'resize smart -50'
alt-shift-equal = 'resize smart +50'

# Workspace management
alt-tab = 'workspace-back-and-forth'
alt-shift-tab = 'move-workspace-to-monitor --wrap-around next'

# Workspace shortcuts
alt-1 = 'workspace 1'
alt-2 = 'workspace 2'
alt-3 = 'workspace 3'
alt-4 = 'workspace 4'
alt-5 = 'workspace 5'
alt-w = 'workspace W'  # Work用ワークスペース
alt-m = 'workspace M'  # Music用ワークスペース
alt-b = 'workspace B'  # Browser用ワークスペース
alt-c = 'workspace C'  # Communication用ワークスペース
alt-n = 'workspace N'  # Notion用ワークスペース
alt-s = 'workspace S'  # (予備)
alt-d = 'workspace D'  # Diagram/Discord用ワークスペース

# Move windows to workspaces
alt-shift-1 = ['move-node-to-workspace 1', 'workspace 1']
alt-shift-2 = ['move-node-to-workspace 2', 'workspace 2']
alt-shift-3 = ['move-node-to-workspace 3', 'workspace 3']
alt-shift-4 = ['move-node-to-workspace 4', 'workspace 4']
alt-shift-5 = ['move-node-to-workspace 5', 'workspace 5']
alt-shift-w = ['move-node-to-workspace W', 'workspace W']
alt-shift-m = ['move-node-to-workspace M', 'workspace M']
alt-shift-b = ['move-node-to-workspace B', 'workspace B']
alt-shift-c = ['move-node-to-workspace C', 'workspace C']
alt-shift-n = ['move-node-to-workspace N', 'workspace N']
alt-shift-s = ['move-node-to-workspace S', 'workspace S']
alt-shift-d = ['move-node-to-workspace D', 'workspace D']

# Service mode
alt-shift-semicolon = 'mode service'

# App-specific workspace assignments
[[on-window-detected]]
if.app-id = 'com.microsoft.VSCode'
run = 'move-node-to-workspace W'

[[on-window-detected]]
if.app-id = 'com.todesktop.230313mzl4w4u92'
run = 'move-node-to-workspace W'

[[on-window-detected]]
if.app-id = 'com.mitchellh.ghostty'
run = 'move-node-to-workspace W'

[[on-window-detected]]
if.app-id = 'com.spotify.client'
run = 'move-node-to-workspace M'

[[on-window-detected]]
if.app-id = 'com.apple.Music'
run = 'move-node-to-workspace M'

[[on-window-detected]]
if.app-id = 'com.google.Chrome'
run = 'move-node-to-workspace B'

[[on-window-detected]]
if.app-id = 'com.apple.Safari'
run = 'move-node-to-workspace B'

[[on-window-detected]]
if.app-id = 'org.mozilla.firefox'
run = 'move-node-to-workspace B'

[[on-window-detected]]
if.app-id = 'com.tinyspeck.slackmacgap'
run = 'move-node-to-workspace C'

[[on-window-detected]]
if.app-id = 'com.gather.Gather'
run = 'move-node-to-workspace C'

[[on-window-detected]]
if.app-id = 'notion.id'
run = 'move-node-to-workspace N'

[[on-window-detected]]
if.app-id = 'company.thebrowser.dia'
run = 'move-node-to-workspace D'

[[on-window-detected]]
if.app-id = 'com.hnc.Discord'
run = 'move-node-to-workspace D'

[mode.service.binding]
esc = ['reload-config', 'mode main']
r = ['flatten-workspace-tree', 'mode main']  # reset layout
f = ['layout floating tiling', 'mode main']  # Toggle between floating and tiling layout
backspace = ['close-all-windows-but-current', 'mode main']
