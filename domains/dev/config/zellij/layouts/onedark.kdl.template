layout {
    default_tab_template {
        // Top status bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                // One Dark colors - bar background
                format_space  "#[bg=#3e4452]"

                format_left   "#[bg=#3e4452,fg=#61afef,bold] 󰣇 {mode} #[bg=#3e4452,fg=#abb2bf]│ #[bg=#3e4452,fg=#e5c07b,bold]{session} "
                format_center "#[bg=#3e4452]{tabs}"
                format_right  "#[bg=#3e4452,fg=#56b6c2]{command_whoami}#[bg=#3e4452,fg=#abb2bf]@#[bg=#3e4452,fg=#98c379]{command_hostname} "

                // Mode styling - One Dark
                mode_normal        "#[bg=#61afef,fg=#282c34,bold] NORMAL "
                mode_locked        "#[bg=#e06c75,fg=#282c34,bold] LOCKED "
                mode_resize        "#[bg=#d19a66,fg=#282c34,bold] RESIZE "
                mode_pane          "#[bg=#98c379,fg=#282c34,bold] PANE "
                mode_tab           "#[bg=#e5c07b,fg=#282c34,bold] TAB "
                mode_scroll        "#[bg=#c678dd,fg=#282c34,bold] SCROLL "
                mode_enter_search  "#[bg=#56b6c2,fg=#282c34,bold] SEARCH "
                mode_search        "#[bg=#56b6c2,fg=#282c34,bold] SEARCH "
                mode_rename_tab    "#[bg=#e5c07b,fg=#282c34,bold] RENAME "
                mode_rename_pane   "#[bg=#98c379,fg=#282c34,bold] RENAME "
                mode_session       "#[bg=#e06c75,fg=#282c34,bold] SESSION "
                mode_move          "#[bg=#d19a66,fg=#282c34,bold] MOVE "
                mode_prompt        "#[bg=#c678dd,fg=#282c34,bold] PROMPT "
                mode_tmux          "#[bg=#d19a66,fg=#282c34,bold] TMUX "

                // Tab styling - One Dark
                tab_normal   "#[bg=#3e4452,fg=#5c6370]  {name}#{index} "
                tab_active   "#[bg=#4b5263,fg=#61afef,bold]  {name}#{index} "

                // Commands
                command_whoami_command     "whoami"
                command_whoami_format      "{stdout}"
                command_whoami_interval    "0"
                command_hostname_command   "hostname"
                command_hostname_format    "{stdout}"
                command_hostname_interval  "0"

                border_enabled  "false"
            }
        }

        // Main content
        children

        // Bottom hint bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                format_space  "#[bg=#3e4452]"

                format_left   "#[bg=#3e4452,fg=#5c6370] Prefix: #[bg=#3e4452,fg=#61afef,bold]Ctrl+q#[bg=#3e4452,fg=#5c6370] │ Split: #[bg=#3e4452,fg=#61afef]\\#[bg=#3e4452,fg=#5c6370],#[bg=#3e4452,fg=#61afef]-#[bg=#3e4452,fg=#5c6370] │ Navigate: #[bg=#3e4452,fg=#61afef]hjkl#[bg=#3e4452,fg=#5c6370] │ Zoom: #[bg=#3e4452,fg=#61afef]z#[bg=#3e4452,fg=#5c6370] │ Tab: #[bg=#3e4452,fg=#61afef]t "
                format_center "#[bg=#3e4452,fg=#5c6370]Scroll: #[bg=#3e4452,fg=#61afef][#[bg=#3e4452,fg=#5c6370] │ Close: #[bg=#3e4452,fg=#61afef]x#[bg=#3e4452,fg=#5c6370] │ Detach: #[bg=#3e4452,fg=#61afef]d "
                format_right  "#[bg=#3e4452,fg=#5c6370]Tab Nav: #[bg=#3e4452,fg=#61afef]Ctrl+h/l#[bg=#3e4452,fg=#5c6370] │ Select: #[bg=#3e4452,fg=#61afef]Ctrl+1-5 "

                border_enabled  "false"
            }
        }
    }
}
