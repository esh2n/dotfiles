layout {
    default_tab_template {
        // Top status bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                // Everforest colors - bar background
                format_space  "#[bg=#3d484d]"

                format_left   "#[bg=#3d484d,fg=#7fbbb3,bold] 󰣇 {mode} #[bg=#3d484d,fg=#d3c6aa]│ #[bg=#3d484d,fg=#dbbc7f,bold]{session} "
                format_center "#[bg=#3d484d]{tabs}"
                format_right  "#[bg=#3d484d,fg=#83c092]{command_whoami}#[bg=#3d484d,fg=#d3c6aa]@#[bg=#3d484d,fg=#a7c080]{command_hostname} "

                // Mode styling - Everforest
                mode_normal        "#[bg=#7fbbb3,fg=#2e383c,bold] NORMAL "
                mode_locked        "#[bg=#e67e80,fg=#2e383c,bold] LOCKED "
                mode_resize        "#[bg=#e69875,fg=#2e383c,bold] RESIZE "
                mode_pane          "#[bg=#a7c080,fg=#2e383c,bold] PANE "
                mode_tab           "#[bg=#dbbc7f,fg=#2e383c,bold] TAB "
                mode_scroll        "#[bg=#d699b6,fg=#2e383c,bold] SCROLL "
                mode_enter_search  "#[bg=#83c092,fg=#2e383c,bold] SEARCH "
                mode_search        "#[bg=#83c092,fg=#2e383c,bold] SEARCH "
                mode_rename_tab    "#[bg=#dbbc7f,fg=#2e383c,bold] RENAME "
                mode_rename_pane   "#[bg=#a7c080,fg=#2e383c,bold] RENAME "
                mode_session       "#[bg=#e67e80,fg=#2e383c,bold] SESSION "
                mode_move          "#[bg=#e69875,fg=#2e383c,bold] MOVE "
                mode_prompt        "#[bg=#d699b6,fg=#2e383c,bold] PROMPT "
                mode_tmux          "#[bg=#e69875,fg=#2e383c,bold] TMUX "

                // Tab styling - Everforest
                tab_normal   "#[bg=#3d484d,fg=#5c6a72]  {name}#{index} "
                tab_active   "#[bg=#4f5b58,fg=#a7c080,bold]  {name}#{index} "

                // Commands
                command_whoami_command     "whoami"
                command_whoami_format      "{stdout}"
                command_whoami_interval    "0"
                command_hostname_command   "hostname"
                command_hostname_format    "{stdout}"
                command_hostname_interval  "0"

                border_enabled  "false"
            }
        }

        // Main content
        children

        // Bottom hint bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                format_space  "#[bg=#3d484d]"

                format_left   "#[bg=#3d484d,fg=#5c6a72] Split: #[bg=#3d484d,fg=#7fbbb3]\\#[bg=#3d484d,fg=#5c6a72],#[bg=#3d484d,fg=#7fbbb3]-#[bg=#3d484d,fg=#5c6a72] │ Nav: #[bg=#3d484d,fg=#7fbbb3]hjkl#[bg=#3d484d,fg=#5c6a72] │ Float: #[bg=#3d484d,fg=#7fbbb3]w,e#[bg=#3d484d,fg=#5c6a72] │ Zoom: #[bg=#3d484d,fg=#7fbbb3]z#[bg=#3d484d,fg=#5c6a72] │ Close: #[bg=#3d484d,fg=#7fbbb3]x "
                format_center "#[bg=#3d484d,fg=#5c6a72]Scroll: #[bg=#3d484d,fg=#7fbbb3][#[bg=#3d484d,fg=#5c6a72] │ Find: #[bg=#3d484d,fg=#7fbbb3]f#[bg=#3d484d,fg=#5c6a72] │ Harpoon: #[bg=#3d484d,fg=#7fbbb3]h#[bg=#3d484d,fg=#5c6a72] │ Detach: #[bg=#3d484d,fg=#7fbbb3]d "
                format_right  "#[bg=#3d484d,fg=#5c6a72]Tab: #[bg=#3d484d,fg=#7fbbb3]t#[bg=#3d484d,fg=#5c6a72] │ Nav: #[bg=#3d484d,fg=#7fbbb3]Ctrl+h/l "

                border_enabled  "false"
            }
        }
    }
}
