layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                // Everforest colors
                format_left   "#[fg=#7fbbb3,bold]󰣇 {mode}#[fg=#d3c6aa] │ #[fg=#dbbc7f,bold] {session}#[fg=#d3c6aa] │ #[fg=#a7c080]{command_git_branch}"
                format_center "{tabs}"
                format_right  "#[fg=#e67e80]{notifications}#[fg=#d3c6aa] │ #[fg=#83c092] {datetime}"

                // Mode styling - Everforest
                mode_normal        "#[bg=#7fbbb3,fg=#2e383c,bold] NORMAL "
                mode_locked        "#[bg=#e67e80,fg=#2e383c,bold] LOCKED "
                mode_resize        "#[bg=#e69875,fg=#2e383c,bold] RESIZE "
                mode_pane          "#[bg=#a7c080,fg=#2e383c,bold] PANE "
                mode_tab           "#[bg=#dbbc7f,fg=#2e383c,bold] TAB "
                mode_scroll        "#[bg=#d699b6,fg=#2e383c,bold] SCROLL "
                mode_enter_search  "#[bg=#83c092,fg=#2e383c,bold] SEARCH "
                mode_search        "#[bg=#83c092,fg=#2e383c,bold] SEARCH "
                mode_rename_tab    "#[bg=#dbbc7f,fg=#2e383c,bold] RENAME "
                mode_rename_pane   "#[bg=#a7c080,fg=#2e383c,bold] RENAME "
                mode_session       "#[bg=#e67e80,fg=#2e383c,bold] SESSION "
                mode_move          "#[bg=#e69875,fg=#2e383c,bold] MOVE "
                mode_prompt        "#[bg=#d699b6,fg=#2e383c,bold] PROMPT "
                mode_tmux          "#[bg=#e69875,fg=#2e383c,bold] TMUX "

                // Tab styling - Everforest
                tab_normal   "#[fg=#5c6a72]  {name}#{index} "
                tab_active   "#[fg=#a7c080,bold,bg=#3d484d]  {name}#{index} "

                // Git command
                command_git_branch_command    "git branch --show-current 2>/dev/null || echo ''"
                command_git_branch_format     "#[fg=#a7c080] {stdout}"
                command_git_branch_interval   "10"

                // DateTime
                datetime_format "%a %m/%d %H:%M"
                datetime_timezone "Asia/Tokyo"

                // Notifications
                notification_format_unread    "#[fg=#e67e80,blink]󱅫 #[noblink]{message} "
                notification_format_no_notifications ""

                // Border
                border_enabled  "true"
                border_char     "─"
                border_format   "#[fg=#5c6a72]{char}"
                border_position "top"
            }
        }
    }
}

