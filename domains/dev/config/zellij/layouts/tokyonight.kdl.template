layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                // Tokyo Night colors
                format_left   "#[fg=#7aa2f7,bold]󰣇 {mode}#[fg=#c0caf5] │ #[fg=#e0af68,bold] {session}#[fg=#c0caf5] │ #[fg=#9ece6a]{command_git_branch}"
                format_center "{tabs}"
                format_right  "#[fg=#f7768e]{notifications}#[fg=#c0caf5] │ #[fg=#73daca] {datetime}"

                // Mode styling - Tokyo Night
                mode_normal        "#[bg=#7aa2f7,fg=#1a1b26,bold] NORMAL "
                mode_locked        "#[bg=#f7768e,fg=#1a1b26,bold] LOCKED "
                mode_resize        "#[bg=#ff9e64,fg=#1a1b26,bold] RESIZE "
                mode_pane          "#[bg=#9ece6a,fg=#1a1b26,bold] PANE "
                mode_tab           "#[bg=#e0af68,fg=#1a1b26,bold] TAB "
                mode_scroll        "#[bg=#bb9af7,fg=#1a1b26,bold] SCROLL "
                mode_enter_search  "#[bg=#73daca,fg=#1a1b26,bold] SEARCH "
                mode_search        "#[bg=#73daca,fg=#1a1b26,bold] SEARCH "
                mode_rename_tab    "#[bg=#e0af68,fg=#1a1b26,bold] RENAME "
                mode_rename_pane   "#[bg=#9ece6a,fg=#1a1b26,bold] RENAME "
                mode_session       "#[bg=#f7768e,fg=#1a1b26,bold] SESSION "
                mode_move          "#[bg=#ff9e64,fg=#1a1b26,bold] MOVE "
                mode_prompt        "#[bg=#bb9af7,fg=#1a1b26,bold] PROMPT "
                mode_tmux          "#[bg=#ff9e64,fg=#1a1b26,bold] TMUX "

                // Tab styling - Tokyo Night
                tab_normal   "#[fg=#414868]  {name}#{index} "
                tab_active   "#[fg=#7aa2f7,bold,bg=#24283b]  {name}#{index} "

                // Git command
                command_git_branch_command    "git branch --show-current 2>/dev/null || echo ''"
                command_git_branch_format     "#[fg=#9ece6a] {stdout}"
                command_git_branch_interval   "10"

                // DateTime
                datetime_format "%a %m/%d %H:%M"
                datetime_timezone "Asia/Tokyo"

                // Notifications
                notification_format_unread    "#[fg=#f7768e,blink]󱅫 #[noblink]{message} "
                notification_format_no_notifications ""

                // Border
                border_enabled  "true"
                border_char     "─"
                border_format   "#[fg=#414868]{char}"
                border_position "top"
            }
        }
    }
}
