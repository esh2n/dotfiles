layout {
    default_tab_template {
        // Top status bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                // Tokyo Night colors - bar background
                format_space  "#[bg=#24283b]"

                format_left   "#[bg=#24283b,fg=#7aa2f7,bold] 󰣇 {mode} #[bg=#24283b,fg=#c0caf5]│ #[bg=#24283b,fg=#e0af68,bold]{session} "
                format_center "#[bg=#24283b]{tabs}"
                format_right  "#[bg=#24283b,fg=#73daca]{command_whoami}#[bg=#24283b,fg=#c0caf5]@#[bg=#24283b,fg=#9ece6a]{command_hostname} "

                // Mode styling - Tokyo Night
                mode_normal        "#[bg=#7aa2f7,fg=#1a1b26,bold] NORMAL "
                mode_locked        "#[bg=#f7768e,fg=#1a1b26,bold] LOCKED "
                mode_resize        "#[bg=#ff9e64,fg=#1a1b26,bold] RESIZE "
                mode_pane          "#[bg=#9ece6a,fg=#1a1b26,bold] PANE "
                mode_tab           "#[bg=#e0af68,fg=#1a1b26,bold] TAB "
                mode_scroll        "#[bg=#bb9af7,fg=#1a1b26,bold] SCROLL "
                mode_enter_search  "#[bg=#73daca,fg=#1a1b26,bold] SEARCH "
                mode_search        "#[bg=#73daca,fg=#1a1b26,bold] SEARCH "
                mode_rename_tab    "#[bg=#e0af68,fg=#1a1b26,bold] RENAME "
                mode_rename_pane   "#[bg=#9ece6a,fg=#1a1b26,bold] RENAME "
                mode_session       "#[bg=#f7768e,fg=#1a1b26,bold] SESSION "
                mode_move          "#[bg=#ff9e64,fg=#1a1b26,bold] MOVE "
                mode_prompt        "#[bg=#bb9af7,fg=#1a1b26,bold] PROMPT "
                mode_tmux          "#[bg=#ff9e64,fg=#1a1b26,bold] TMUX "

                // Tab styling - Tokyo Night
                tab_normal   "#[bg=#24283b,fg=#414868]  {name}#{index} "
                tab_active   "#[bg=#414868,fg=#7aa2f7,bold]  {name}#{index} "

                // Commands
                command_whoami_command     "whoami"
                command_whoami_format      "{stdout}"
                command_whoami_interval    "0"
                command_hostname_command   "hostname"
                command_hostname_format    "{stdout}"
                command_hostname_interval  "0"

                border_enabled  "false"
            }
        }

        // Main content
        children

        // Bottom hint bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                format_space  "#[bg=#24283b]"

                format_left   "#[bg=#24283b,fg=#414868] Prefix: #[bg=#24283b,fg=#7aa2f7,bold]Ctrl+q#[bg=#24283b,fg=#414868] │ Split: #[bg=#24283b,fg=#7aa2f7]\\#[bg=#24283b,fg=#414868],#[bg=#24283b,fg=#7aa2f7]-#[bg=#24283b,fg=#414868] │ Nav: #[bg=#24283b,fg=#7aa2f7]hjkl#[bg=#24283b,fg=#414868] │ Float: #[bg=#24283b,fg=#7aa2f7]w,e#[bg=#24283b,fg=#414868] │ Zoom: #[bg=#24283b,fg=#7aa2f7]z "
                format_center "#[bg=#24283b,fg=#414868]Scroll: #[bg=#24283b,fg=#7aa2f7][#[bg=#24283b,fg=#414868] │ Close: #[bg=#24283b,fg=#7aa2f7]x#[bg=#24283b,fg=#414868] │ Detach: #[bg=#24283b,fg=#7aa2f7]d "
                format_right  "#[bg=#24283b,fg=#414868]Tab: #[bg=#24283b,fg=#7aa2f7]t#[bg=#24283b,fg=#414868] │ Nav: #[bg=#24283b,fg=#7aa2f7]Ctrl+h/l "

                border_enabled  "false"
            }
        }
    }
}
