layout {
    default_tab_template {
        // Top status bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                // Gruvbox colors - bar background
                format_space  "#[bg=#3c3836]"

                format_left   "#[bg=#3c3836,fg=#83a598,bold] 󰣇 {mode} #[bg=#3c3836,fg=#ebdbb2]│ #[bg=#3c3836,fg=#fabd2f,bold]{session} "
                format_center "#[bg=#3c3836]{tabs}"
                format_right  "#[bg=#3c3836,fg=#8ec07c]{command_whoami}#[bg=#3c3836,fg=#ebdbb2]@#[bg=#3c3836,fg=#b8bb26]{command_hostname} "

                // Mode styling - Gruvbox
                mode_normal        "#[bg=#83a598,fg=#282828,bold] NORMAL "
                mode_locked        "#[bg=#fb4934,fg=#282828,bold] LOCKED "
                mode_resize        "#[bg=#fe8019,fg=#282828,bold] RESIZE "
                mode_pane          "#[bg=#b8bb26,fg=#282828,bold] PANE "
                mode_tab           "#[bg=#fabd2f,fg=#282828,bold] TAB "
                mode_scroll        "#[bg=#d3869b,fg=#282828,bold] SCROLL "
                mode_enter_search  "#[bg=#8ec07c,fg=#282828,bold] SEARCH "
                mode_search        "#[bg=#8ec07c,fg=#282828,bold] SEARCH "
                mode_rename_tab    "#[bg=#fabd2f,fg=#282828,bold] RENAME "
                mode_rename_pane   "#[bg=#b8bb26,fg=#282828,bold] RENAME "
                mode_session       "#[bg=#fb4934,fg=#282828,bold] SESSION "
                mode_move          "#[bg=#fe8019,fg=#282828,bold] MOVE "
                mode_prompt        "#[bg=#d3869b,fg=#282828,bold] PROMPT "
                mode_tmux          "#[bg=#fe8019,fg=#282828,bold] TMUX "

                // Tab styling - Gruvbox
                tab_normal   "#[bg=#3c3836,fg=#665c54]  {name}#{index} "
                tab_active   "#[bg=#504945,fg=#83a598,bold]  {name}#{index} "

                // Commands
                command_whoami_command     "whoami"
                command_whoami_format      "{stdout}"
                command_whoami_interval    "0"
                command_hostname_command   "hostname"
                command_hostname_format    "{stdout}"
                command_hostname_interval  "0"

                border_enabled  "false"
            }
        }

        // Main content
        children

        // Bottom hint bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                format_space  "#[bg=#3c3836]"

                format_left   "#[bg=#3c3836,fg=#665c54] Prefix: #[bg=#3c3836,fg=#83a598,bold]Ctrl+q#[bg=#3c3836,fg=#665c54] │ Split: #[bg=#3c3836,fg=#83a598]\\#[bg=#3c3836,fg=#665c54],#[bg=#3c3836,fg=#83a598]-#[bg=#3c3836,fg=#665c54] │ Navigate: #[bg=#3c3836,fg=#83a598]hjkl#[bg=#3c3836,fg=#665c54] │ Zoom: #[bg=#3c3836,fg=#83a598]z#[bg=#3c3836,fg=#665c54] │ Tab: #[bg=#3c3836,fg=#83a598]t "
                format_center "#[bg=#3c3836,fg=#665c54]Scroll: #[bg=#3c3836,fg=#83a598][#[bg=#3c3836,fg=#665c54] │ Close: #[bg=#3c3836,fg=#83a598]x#[bg=#3c3836,fg=#665c54] │ Detach: #[bg=#3c3836,fg=#83a598]d "
                format_right  "#[bg=#3c3836,fg=#665c54]Tab Nav: #[bg=#3c3836,fg=#83a598]Ctrl+h/l#[bg=#3c3836,fg=#665c54] │ Select: #[bg=#3c3836,fg=#83a598]Ctrl+1-5 "

                border_enabled  "false"
            }
        }
    }
}
