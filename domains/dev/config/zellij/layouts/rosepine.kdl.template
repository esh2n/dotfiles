layout {
    default_tab_template {
        // Top status bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                // Rosé Pine colors - bar background
                format_space  "#[bg=#26233a]"

                format_left   "#[bg=#26233a,fg=#31748f,bold] 󰣇 {mode} #[bg=#26233a,fg=#e0def4]│ #[bg=#26233a,fg=#f6c177,bold]{session} "
                format_center "#[bg=#26233a]{tabs}"
                format_right  "#[bg=#26233a,fg=#ebbcba]{command_whoami}#[bg=#26233a,fg=#e0def4]@#[bg=#26233a,fg=#9ccfd8]{command_hostname} "

                // Mode styling - Rosé Pine
                mode_normal        "#[bg=#31748f,fg=#191724,bold] NORMAL "
                mode_locked        "#[bg=#eb6f92,fg=#191724,bold] LOCKED "
                mode_resize        "#[bg=#f6c177,fg=#191724,bold] RESIZE "
                mode_pane          "#[bg=#9ccfd8,fg=#191724,bold] PANE "
                mode_tab           "#[bg=#f6c177,fg=#191724,bold] TAB "
                mode_scroll        "#[bg=#c4a7e7,fg=#191724,bold] SCROLL "
                mode_enter_search  "#[bg=#ebbcba,fg=#191724,bold] SEARCH "
                mode_search        "#[bg=#ebbcba,fg=#191724,bold] SEARCH "
                mode_rename_tab    "#[bg=#f6c177,fg=#191724,bold] RENAME "
                mode_rename_pane   "#[bg=#9ccfd8,fg=#191724,bold] RENAME "
                mode_session       "#[bg=#eb6f92,fg=#191724,bold] SESSION "
                mode_move          "#[bg=#f6c177,fg=#191724,bold] MOVE "
                mode_prompt        "#[bg=#c4a7e7,fg=#191724,bold] PROMPT "
                mode_tmux          "#[bg=#f6c177,fg=#191724,bold] TMUX "

                // Tab styling - Rosé Pine
                tab_normal   "#[bg=#26233a,fg=#6e6a86]  {name}#{index} "
                tab_active   "#[bg=#403d52,fg=#ebbcba,bold]  {name}#{index} "

                // Commands
                command_whoami_command     "whoami"
                command_whoami_format      "{stdout}"
                command_whoami_interval    "0"
                command_hostname_command   "hostname"
                command_hostname_format    "{stdout}"
                command_hostname_interval  "0"

                border_enabled  "false"
            }
        }

        // Main content
        children

        // Bottom hint bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                format_space  "#[bg=#26233a]"

                format_left   "#[bg=#26233a,fg=#6e6a86] Prefix: #[bg=#26233a,fg=#31748f,bold]Ctrl+q#[bg=#26233a,fg=#6e6a86] │ Split: #[bg=#26233a,fg=#31748f]\\#[bg=#26233a,fg=#6e6a86],#[bg=#26233a,fg=#31748f]-#[bg=#26233a,fg=#6e6a86] │ Navigate: #[bg=#26233a,fg=#31748f]hjkl#[bg=#26233a,fg=#6e6a86] │ Zoom: #[bg=#26233a,fg=#31748f]z#[bg=#26233a,fg=#6e6a86] │ Tab: #[bg=#26233a,fg=#31748f]t "
                format_center "#[bg=#26233a,fg=#6e6a86]Scroll: #[bg=#26233a,fg=#31748f][#[bg=#26233a,fg=#6e6a86] │ Close: #[bg=#26233a,fg=#31748f]x#[bg=#26233a,fg=#6e6a86] │ Detach: #[bg=#26233a,fg=#31748f]d "
                format_right  "#[bg=#26233a,fg=#6e6a86]Tab Nav: #[bg=#26233a,fg=#31748f]Ctrl+h/l#[bg=#26233a,fg=#6e6a86] │ Select: #[bg=#26233a,fg=#31748f]Ctrl+1-5 "

                border_enabled  "false"
            }
        }
    }
}
