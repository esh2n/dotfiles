layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                // Dracula colors
                format_left   "#[fg=#bd93f9,bold]󰣇 {mode}#[fg=#f8f8f2] │ #[fg=#f1fa8c,bold] {session}#[fg=#f8f8f2] │ #[fg=#50fa7b]{command_git_branch}"
                format_center "{tabs}"
                format_right  "#[fg=#ff5555]{notifications}#[fg=#f8f8f2] │ #[fg=#8be9fd] {datetime}"

                // Mode styling - Dracula
                mode_normal        "#[bg=#bd93f9,fg=#282a36,bold] NORMAL "
                mode_locked        "#[bg=#ff5555,fg=#282a36,bold] LOCKED "
                mode_resize        "#[bg=#ffb86c,fg=#282a36,bold] RESIZE "
                mode_pane          "#[bg=#50fa7b,fg=#282a36,bold] PANE "
                mode_tab           "#[bg=#f1fa8c,fg=#282a36,bold] TAB "
                mode_scroll        "#[bg=#ff79c6,fg=#282a36,bold] SCROLL "
                mode_enter_search  "#[bg=#8be9fd,fg=#282a36,bold] SEARCH "
                mode_search        "#[bg=#8be9fd,fg=#282a36,bold] SEARCH "
                mode_rename_tab    "#[bg=#f1fa8c,fg=#282a36,bold] RENAME "
                mode_rename_pane   "#[bg=#50fa7b,fg=#282a36,bold] RENAME "
                mode_session       "#[bg=#ff5555,fg=#282a36,bold] SESSION "
                mode_move          "#[bg=#ffb86c,fg=#282a36,bold] MOVE "
                mode_prompt        "#[bg=#ff79c6,fg=#282a36,bold] PROMPT "
                mode_tmux          "#[bg=#ffb86c,fg=#282a36,bold] TMUX "

                // Tab styling - Dracula
                tab_normal   "#[fg=#6272a4]  {name}#{index} "
                tab_active   "#[fg=#bd93f9,bold,bg=#44475a]  {name}#{index} "

                // Git command
                command_git_branch_command    "git branch --show-current 2>/dev/null || echo ''"
                command_git_branch_format     "#[fg=#50fa7b] {stdout}"
                command_git_branch_interval   "10"

                // DateTime
                datetime_format "%a %m/%d %H:%M"
                datetime_timezone "Asia/Tokyo"

                // Notifications
                notification_format_unread    "#[fg=#ff5555,blink]󱅫 #[noblink]{message} "
                notification_format_no_notifications ""

                // Border
                border_enabled  "true"
                border_char     "─"
                border_format   "#[fg=#6272a4]{char}"
                border_position "top"
            }
        }
    }
}

