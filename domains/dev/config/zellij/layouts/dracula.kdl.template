layout {
    default_tab_template {
        // Top status bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                // Dracula colors - bar background
                format_space  "#[bg=#44475a]"

                format_left   "#[bg=#44475a,fg=#bd93f9,bold] 󰣇 {mode} #[bg=#44475a,fg=#f8f8f2]│ #[bg=#44475a,fg=#f1fa8c,bold]{session} "
                format_center "#[bg=#44475a]{tabs}"
                format_right  "#[bg=#44475a,fg=#8be9fd]{command_whoami}#[bg=#44475a,fg=#f8f8f2]@#[bg=#44475a,fg=#50fa7b]{command_hostname} "

                // Mode styling - Dracula
                mode_normal        "#[bg=#bd93f9,fg=#282a36,bold] NORMAL "
                mode_locked        "#[bg=#ff5555,fg=#282a36,bold] LOCKED "
                mode_resize        "#[bg=#ffb86c,fg=#282a36,bold] RESIZE "
                mode_pane          "#[bg=#50fa7b,fg=#282a36,bold] PANE "
                mode_tab           "#[bg=#f1fa8c,fg=#282a36,bold] TAB "
                mode_scroll        "#[bg=#ff79c6,fg=#282a36,bold] SCROLL "
                mode_enter_search  "#[bg=#8be9fd,fg=#282a36,bold] SEARCH "
                mode_search        "#[bg=#8be9fd,fg=#282a36,bold] SEARCH "
                mode_rename_tab    "#[bg=#f1fa8c,fg=#282a36,bold] RENAME "
                mode_rename_pane   "#[bg=#50fa7b,fg=#282a36,bold] RENAME "
                mode_session       "#[bg=#ff5555,fg=#282a36,bold] SESSION "
                mode_move          "#[bg=#ffb86c,fg=#282a36,bold] MOVE "
                mode_prompt        "#[bg=#ff79c6,fg=#282a36,bold] PROMPT "
                mode_tmux          "#[bg=#ffb86c,fg=#282a36,bold] TMUX "

                // Tab styling - Dracula
                tab_normal   "#[bg=#44475a,fg=#6272a4]  {name}#{index} "
                tab_active   "#[bg=#6272a4,fg=#bd93f9,bold]  {name}#{index} "

                // Commands
                command_whoami_command     "whoami"
                command_whoami_format      "{stdout}"
                command_whoami_interval    "0"
                command_hostname_command   "hostname"
                command_hostname_format    "{stdout}"
                command_hostname_interval  "0"

                border_enabled  "false"
            }
        }

        // Main content
        children

        // Bottom hint bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                format_space  "#[bg=#44475a]"

                format_left   "#[bg=#44475a,fg=#6272a4] Prefix: #[bg=#44475a,fg=#bd93f9,bold]Ctrl+q#[bg=#44475a,fg=#6272a4] │ Split: #[bg=#44475a,fg=#bd93f9]\\#[bg=#44475a,fg=#6272a4],#[bg=#44475a,fg=#bd93f9]-#[bg=#44475a,fg=#6272a4] │ Navigate: #[bg=#44475a,fg=#bd93f9]hjkl#[bg=#44475a,fg=#6272a4] │ Zoom: #[bg=#44475a,fg=#bd93f9]z#[bg=#44475a,fg=#6272a4] │ Tab: #[bg=#44475a,fg=#bd93f9]t "
                format_center "#[bg=#44475a,fg=#6272a4]Scroll: #[bg=#44475a,fg=#bd93f9][#[bg=#44475a,fg=#6272a4] │ Close: #[bg=#44475a,fg=#bd93f9]x#[bg=#44475a,fg=#6272a4] │ Detach: #[bg=#44475a,fg=#bd93f9]d "
                format_right  "#[bg=#44475a,fg=#6272a4]Tab Nav: #[bg=#44475a,fg=#bd93f9]Ctrl+h/l#[bg=#44475a,fg=#6272a4] │ Select: #[bg=#44475a,fg=#bd93f9]Ctrl+1-5 "

                border_enabled  "false"
            }
        }
    }
}
