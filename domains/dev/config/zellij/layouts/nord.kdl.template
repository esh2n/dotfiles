layout {
    default_tab_template {
        // Top status bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                // Nord colors - bar background
                format_space  "#[bg=#3b4252]"

                format_left   "#[bg=#3b4252,fg=#81a1c1,bold] 󰣇 {mode} #[bg=#3b4252,fg=#d8dee9]│ #[bg=#3b4252,fg=#ebcb8b,bold]{session} "
                format_center "#[bg=#3b4252]{tabs}"
                format_right  "#[bg=#3b4252,fg=#88c0d0]{command_whoami}#[bg=#3b4252,fg=#d8dee9]@#[bg=#3b4252,fg=#a3be8c]{command_hostname} "

                // Mode styling - Nord
                mode_normal        "#[bg=#81a1c1,fg=#2e3440,bold] NORMAL "
                mode_locked        "#[bg=#bf616a,fg=#2e3440,bold] LOCKED "
                mode_resize        "#[bg=#d08770,fg=#2e3440,bold] RESIZE "
                mode_pane          "#[bg=#a3be8c,fg=#2e3440,bold] PANE "
                mode_tab           "#[bg=#ebcb8b,fg=#2e3440,bold] TAB "
                mode_scroll        "#[bg=#b48ead,fg=#2e3440,bold] SCROLL "
                mode_enter_search  "#[bg=#88c0d0,fg=#2e3440,bold] SEARCH "
                mode_search        "#[bg=#88c0d0,fg=#2e3440,bold] SEARCH "
                mode_rename_tab    "#[bg=#ebcb8b,fg=#2e3440,bold] RENAME "
                mode_rename_pane   "#[bg=#a3be8c,fg=#2e3440,bold] RENAME "
                mode_session       "#[bg=#bf616a,fg=#2e3440,bold] SESSION "
                mode_move          "#[bg=#d08770,fg=#2e3440,bold] MOVE "
                mode_prompt        "#[bg=#b48ead,fg=#2e3440,bold] PROMPT "
                mode_tmux          "#[bg=#d08770,fg=#2e3440,bold] TMUX "

                // Tab styling - Nord
                tab_normal   "#[bg=#3b4252,fg=#4c566a]  {name}#{index} "
                tab_active   "#[bg=#4c566a,fg=#81a1c1,bold]  {name}#{index} "

                // Commands
                command_whoami_command     "whoami"
                command_whoami_format      "{stdout}"
                command_whoami_interval    "0"
                command_hostname_command   "hostname"
                command_hostname_format    "{stdout}"
                command_hostname_interval  "0"

                border_enabled  "false"
            }
        }

        // Main content
        children

        // Bottom hint bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                format_space  "#[bg=#3b4252]"

                format_left   "#[bg=#3b4252,fg=#4c566a] Prefix: #[bg=#3b4252,fg=#81a1c1,bold]Ctrl+q#[bg=#3b4252,fg=#4c566a] │ Split: #[bg=#3b4252,fg=#81a1c1]\\#[bg=#3b4252,fg=#4c566a],#[bg=#3b4252,fg=#81a1c1]-#[bg=#3b4252,fg=#4c566a] │ Nav: #[bg=#3b4252,fg=#81a1c1]hjkl#[bg=#3b4252,fg=#4c566a] │ Float: #[bg=#3b4252,fg=#81a1c1]w,e#[bg=#3b4252,fg=#4c566a] │ Zoom: #[bg=#3b4252,fg=#81a1c1]z "
                format_center "#[bg=#3b4252,fg=#4c566a]Scroll: #[bg=#3b4252,fg=#81a1c1][#[bg=#3b4252,fg=#4c566a] │ Close: #[bg=#3b4252,fg=#81a1c1]x#[bg=#3b4252,fg=#4c566a] │ Detach: #[bg=#3b4252,fg=#81a1c1]d "
                format_right  "#[bg=#3b4252,fg=#4c566a]Tab: #[bg=#3b4252,fg=#81a1c1]t#[bg=#3b4252,fg=#4c566a] │ Nav: #[bg=#3b4252,fg=#81a1c1]Ctrl+h/l "

                border_enabled  "false"
            }
        }
    }
}
