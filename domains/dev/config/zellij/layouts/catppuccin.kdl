layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="file:/Users/esh2n/.config/zellij/plugins/zjstatus.wasm" {
                // Catppuccin Mocha colors
                format_left   "#[fg=#89b4fa,bold]󰣇 {mode}#[fg=#cdd6f4] │ #[fg=#fab387,bold] {session}#[fg=#cdd6f4] │ #[fg=#a6e3a1]{command_git_branch}"
                format_center "{tabs}"
                format_right  "#[fg=#f38ba8]{notifications}#[fg=#cdd6f4] │ #[fg=#94e2d5] {datetime}"

                // Mode styling - Catppuccin
                mode_normal        "#[bg=#89b4fa,fg=#1e1e2e,bold] NORMAL "
                mode_locked        "#[bg=#f38ba8,fg=#1e1e2e,bold] LOCKED "
                mode_resize        "#[bg=#fab387,fg=#1e1e2e,bold] RESIZE "
                mode_pane          "#[bg=#a6e3a1,fg=#1e1e2e,bold] PANE "
                mode_tab           "#[bg=#f9e2af,fg=#1e1e2e,bold] TAB "
                mode_scroll        "#[bg=#cba6f7,fg=#1e1e2e,bold] SCROLL "
                mode_enter_search  "#[bg=#94e2d5,fg=#1e1e2e,bold] SEARCH "
                mode_search        "#[bg=#94e2d5,fg=#1e1e2e,bold] SEARCH "
                mode_rename_tab    "#[bg=#f9e2af,fg=#1e1e2e,bold] RENAME "
                mode_rename_pane   "#[bg=#a6e3a1,fg=#1e1e2e,bold] RENAME "
                mode_session       "#[bg=#f38ba8,fg=#1e1e2e,bold] SESSION "
                mode_move          "#[bg=#fab387,fg=#1e1e2e,bold] MOVE "
                mode_prompt        "#[bg=#cba6f7,fg=#1e1e2e,bold] PROMPT "
                mode_tmux          "#[bg=#fab387,fg=#1e1e2e,bold] TMUX "

                // Tab styling - Catppuccin
                tab_normal   "#[fg=#6c7086]  {name}#{index} "
                tab_active   "#[fg=#89b4fa,bold,bg=#313244]  {name}#{index} "

                // Git command
                command_git_branch_command    "git branch --show-current 2>/dev/null || echo ''"
                command_git_branch_format     "#[fg=#a6e3a1] {stdout}"
                command_git_branch_interval   "10"

                // DateTime
                datetime_format "%a %m/%d %H:%M"
                datetime_timezone "Asia/Tokyo"

                // Notifications
                notification_format_unread    "#[fg=#f38ba8,blink]󱅫 #[noblink]{message} "
                notification_format_no_notifications ""

                // Border
                border_enabled  "true"
                border_char     "─"
                border_format   "#[fg=#6c7086]{char}"
                border_position "top"
            }
        }
    }
}