layout {
    default_tab_template {
        children
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                // Kanagawa colors
                format_left   "#[fg=#7e9cd8,bold]󰣇 {mode}#[fg=#dcd7ba] │ #[fg=#c0a36e,bold] {session}#[fg=#dcd7ba] │ #[fg=#76946a]{command_git_branch}"
                format_center "{tabs}"
                format_right  "#[fg=#c34043]{notifications}#[fg=#dcd7ba] │ #[fg=#6a9589] {datetime}"

                // Mode styling - Kanagawa
                mode_normal        "#[bg=#7e9cd8,fg=#1f1f28,bold] NORMAL "
                mode_locked        "#[bg=#c34043,fg=#1f1f28,bold] LOCKED "
                mode_resize        "#[bg=#ffa066,fg=#1f1f28,bold] RESIZE "
                mode_pane          "#[bg=#76946a,fg=#1f1f28,bold] PANE "
                mode_tab           "#[bg=#c0a36e,fg=#1f1f28,bold] TAB "
                mode_scroll        "#[bg=#957fb8,fg=#1f1f28,bold] SCROLL "
                mode_enter_search  "#[bg=#6a9589,fg=#1f1f28,bold] SEARCH "
                mode_search        "#[bg=#6a9589,fg=#1f1f28,bold] SEARCH "
                mode_rename_tab    "#[bg=#c0a36e,fg=#1f1f28,bold] RENAME "
                mode_rename_pane   "#[bg=#76946a,fg=#1f1f28,bold] RENAME "
                mode_session       "#[bg=#c34043,fg=#1f1f28,bold] SESSION "
                mode_move          "#[bg=#ffa066,fg=#1f1f28,bold] MOVE "
                mode_prompt        "#[bg=#957fb8,fg=#1f1f28,bold] PROMPT "
                mode_tmux          "#[bg=#ffa066,fg=#1f1f28,bold] TMUX "

                // Tab styling - Kanagawa
                tab_normal   "#[fg=#54546d]  {name}#{index} "
                tab_active   "#[fg=#7e9cd8,bold,bg=#2a2a37]  {name}#{index} "

                // Git command
                command_git_branch_command    "git branch --show-current 2>/dev/null || echo ''"
                command_git_branch_format     "#[fg=#76946a] {stdout}"
                command_git_branch_interval   "10"

                // DateTime
                datetime_format "%a %m/%d %H:%M"
                datetime_timezone "Asia/Tokyo"

                // Notifications
                notification_format_unread    "#[fg=#c34043,blink]󱅫 #[noblink]{message} "
                notification_format_no_notifications ""

                // Border
                border_enabled  "true"
                border_char     "─"
                border_format   "#[fg=#54546d]{char}"
                border_position "top"
            }
        }
    }
}

