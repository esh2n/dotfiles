layout {
    default_tab_template {
        // Top status bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                // Kanagawa colors - bar background
                format_space  "#[bg=#2a2a37]"

                format_left   "#[bg=#2a2a37,fg=#7e9cd8,bold] 󰣇 {mode} #[bg=#2a2a37,fg=#dcd7ba]│ #[bg=#2a2a37,fg=#c0a36e,bold]{session} "
                format_center "#[bg=#2a2a37]{tabs}"
                format_right  "#[bg=#2a2a37,fg=#6a9589]{command_whoami}#[bg=#2a2a37,fg=#dcd7ba]@#[bg=#2a2a37,fg=#76946a]{command_hostname} "

                // Mode styling - Kanagawa
                mode_normal        "#[bg=#7e9cd8,fg=#1f1f28,bold] NORMAL "
                mode_locked        "#[bg=#c34043,fg=#1f1f28,bold] LOCKED "
                mode_resize        "#[bg=#ffa066,fg=#1f1f28,bold] RESIZE "
                mode_pane          "#[bg=#76946a,fg=#1f1f28,bold] PANE "
                mode_tab           "#[bg=#c0a36e,fg=#1f1f28,bold] TAB "
                mode_scroll        "#[bg=#957fb8,fg=#1f1f28,bold] SCROLL "
                mode_enter_search  "#[bg=#6a9589,fg=#1f1f28,bold] SEARCH "
                mode_search        "#[bg=#6a9589,fg=#1f1f28,bold] SEARCH "
                mode_rename_tab    "#[bg=#c0a36e,fg=#1f1f28,bold] RENAME "
                mode_rename_pane   "#[bg=#76946a,fg=#1f1f28,bold] RENAME "
                mode_session       "#[bg=#c34043,fg=#1f1f28,bold] SESSION "
                mode_move          "#[bg=#ffa066,fg=#1f1f28,bold] MOVE "
                mode_prompt        "#[bg=#957fb8,fg=#1f1f28,bold] PROMPT "
                mode_tmux          "#[bg=#ffa066,fg=#1f1f28,bold] TMUX "

                // Tab styling - Kanagawa
                tab_normal   "#[bg=#2a2a37,fg=#54546d]  {name}#{index} "
                tab_active   "#[bg=#363646,fg=#7e9cd8,bold]  {name}#{index} "

                // Commands
                command_whoami_command     "whoami"
                command_whoami_format      "{stdout}"
                command_whoami_interval    "0"
                command_hostname_command   "hostname"
                command_hostname_format    "{stdout}"
                command_hostname_interval  "0"

                border_enabled  "false"
            }
        }

        // Main content
        children

        // Bottom hint bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                format_space  "#[bg=#2a2a37]"

                format_left   "#[bg=#2a2a37,fg=#54546d] Prefix: #[bg=#2a2a37,fg=#7e9cd8,bold]Ctrl+q#[bg=#2a2a37,fg=#54546d] │ Split: #[bg=#2a2a37,fg=#7e9cd8]\\#[bg=#2a2a37,fg=#54546d],#[bg=#2a2a37,fg=#7e9cd8]-#[bg=#2a2a37,fg=#54546d] │ Navigate: #[bg=#2a2a37,fg=#7e9cd8]hjkl#[bg=#2a2a37,fg=#54546d] │ Zoom: #[bg=#2a2a37,fg=#7e9cd8]z#[bg=#2a2a37,fg=#54546d] │ Tab: #[bg=#2a2a37,fg=#7e9cd8]t "
                format_center "#[bg=#2a2a37,fg=#54546d]Scroll: #[bg=#2a2a37,fg=#7e9cd8][#[bg=#2a2a37,fg=#54546d] │ Close: #[bg=#2a2a37,fg=#7e9cd8]x#[bg=#2a2a37,fg=#54546d] │ Detach: #[bg=#2a2a37,fg=#7e9cd8]d "
                format_right  "#[bg=#2a2a37,fg=#54546d]Tab Nav: #[bg=#2a2a37,fg=#7e9cd8]Ctrl+h/l#[bg=#2a2a37,fg=#54546d] │ Select: #[bg=#2a2a37,fg=#7e9cd8]Ctrl+1-5 "

                border_enabled  "false"
            }
        }
    }
}
