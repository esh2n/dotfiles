layout {
    default_tab_template {
        // Top status bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                // Solarized Dark colors - bar background
                format_space  "#[bg=#073642]"

                format_left   "#[bg=#073642,fg=#268bd2,bold] 󰣇 {mode} #[bg=#073642,fg=#839496]│ #[bg=#073642,fg=#b58900,bold]{session} "
                format_center "#[bg=#073642]{tabs}"
                format_right  "#[bg=#073642,fg=#2aa198]{command_whoami}#[bg=#073642,fg=#839496]@#[bg=#073642,fg=#859900]{command_hostname} "

                // Mode styling - Solarized
                mode_normal        "#[bg=#268bd2,fg=#002b36,bold] NORMAL "
                mode_locked        "#[bg=#dc322f,fg=#002b36,bold] LOCKED "
                mode_resize        "#[bg=#cb4b16,fg=#002b36,bold] RESIZE "
                mode_pane          "#[bg=#859900,fg=#002b36,bold] PANE "
                mode_tab           "#[bg=#b58900,fg=#002b36,bold] TAB "
                mode_scroll        "#[bg=#6c71c4,fg=#002b36,bold] SCROLL "
                mode_enter_search  "#[bg=#2aa198,fg=#002b36,bold] SEARCH "
                mode_search        "#[bg=#2aa198,fg=#002b36,bold] SEARCH "
                mode_rename_tab    "#[bg=#b58900,fg=#002b36,bold] RENAME "
                mode_rename_pane   "#[bg=#859900,fg=#002b36,bold] RENAME "
                mode_session       "#[bg=#dc322f,fg=#002b36,bold] SESSION "
                mode_move          "#[bg=#cb4b16,fg=#002b36,bold] MOVE "
                mode_prompt        "#[bg=#6c71c4,fg=#002b36,bold] PROMPT "
                mode_tmux          "#[bg=#cb4b16,fg=#002b36,bold] TMUX "

                // Tab styling - Solarized
                tab_normal   "#[bg=#073642,fg=#586e75]  {name}#{index} "
                tab_active   "#[bg=#002b36,fg=#268bd2,bold]  {name}#{index} "

                // Commands
                command_whoami_command     "whoami"
                command_whoami_format      "{stdout}"
                command_whoami_interval    "0"
                command_hostname_command   "hostname"
                command_hostname_format    "{stdout}"
                command_hostname_interval  "0"

                border_enabled  "false"
            }
        }

        // Main content
        children

        // Bottom hint bar
        pane size=1 borderless=true {
            plugin location="file:{{HOME}}/.config/zellij/plugins/zjstatus.wasm" {
                format_space  "#[bg=#073642]"

                format_left   "#[bg=#073642,fg=#586e75] Split: #[bg=#073642,fg=#268bd2]\\#[bg=#073642,fg=#586e75],#[bg=#073642,fg=#268bd2]-#[bg=#073642,fg=#586e75] │ Nav: #[bg=#073642,fg=#268bd2]hjkl#[bg=#073642,fg=#586e75] │ Float: #[bg=#073642,fg=#268bd2]w,e#[bg=#073642,fg=#586e75] │ Zoom: #[bg=#073642,fg=#268bd2]z#[bg=#073642,fg=#586e75] │ Close: #[bg=#073642,fg=#268bd2]x "
                format_center "#[bg=#073642,fg=#586e75]Scroll: #[bg=#073642,fg=#268bd2][#[bg=#073642,fg=#586e75] │ Find: #[bg=#073642,fg=#268bd2]f#[bg=#073642,fg=#586e75] │ Harpoon: #[bg=#073642,fg=#268bd2]h#[bg=#073642,fg=#586e75] │ Detach: #[bg=#073642,fg=#268bd2]d "
                format_right  "#[bg=#073642,fg=#586e75]Tab: #[bg=#073642,fg=#268bd2]t#[bg=#073642,fg=#586e75] │ Nav: #[bg=#073642,fg=#268bd2]Ctrl+h/l "

                border_enabled  "false"
            }
        }
    }
}
